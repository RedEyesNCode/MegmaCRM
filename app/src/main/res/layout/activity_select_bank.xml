<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg"
    tools:context=".ui.activity.SelectBankActivity">
    <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
        android:background="@color/blue"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:src="@drawable/baseline_arrow_forward_24"
        android:rotation="180"
        android:id="@+id/ivBack"
        app:tint="@color/white"
        android:layout_height="@dimen/_25sdp"/>


</androidx.appcompat.widget.Toolbar>
<ScrollView
android:layout_width="match_parent"
android:fillViewport="true"
android:layout_margin="@dimen/_5sdp"
android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="Add Bank Account"
            android:textAllCaps="false"
            android:fontFamily="@font/sora_bold"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_border"
            android:hint="Full Name"
            app:hintTextAppearance="@style/MediumTextView"

            android:layout_marginTop="@dimen/_10sdp"

            app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sora_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/edtFullName"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/baseline_assignment_ind_24"

                android:textSize="@dimen/_14sdp"

                android:inputType="textPersonName"
                android:imeOptions="actionDone"


                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_border"
            android:hint="Account Number"
            app:hintTextAppearance="@style/MediumTextView"

            android:layout_marginTop="@dimen/_10sdp"

            app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sora_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/edtAccountNumber"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/baseline_123_24"

                android:textSize="@dimen/_14sdp"

                android:inputType="number"
                android:imeOptions="actionDone"


                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>





        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_border"
            android:hint="Confirm Account Number"
            app:hintTextAppearance="@style/MediumTextView"

            android:layout_marginTop="@dimen/_10sdp"

            app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sora_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/edtConfirmBankAccount"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/baseline_123_24"

                android:textSize="@dimen/_14sdp"

                android:inputType="numberPassword"
                android:imeOptions="actionDone"


                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_border"
            android:hint="Select Bank"
            app:hintTextAppearance="@style/MediumTextView"

            android:layout_marginTop="@dimen/_10sdp"

            app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sora_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/edtBankList"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/baseline_account_balance_24"

                android:textSize="@dimen/_14sdp"
                android:clickable="true"
                android:focusable="false"

                android:imeOptions="actionDone"


                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_border"
            android:hint="Enter IFSC Code"
            app:hintTextAppearance="@style/MediumTextView"

            android:layout_marginTop="@dimen/_10sdp"

            app:endIconDrawable="@drawable/baseline_arrow_drop_down_24"
            app:boxBackgroundMode="none"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sora_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_7sdp"
                android:id="@+id/edtIfscCode"

                android:textSize="@dimen/_14sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/baseline_account_balance_24"
                android:maxLength="11"
                android:imeOptions="actionDone"


                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/blue_light"
            android:text="Submit"
            android:textAlignment="center"
            android:textSize="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/btnSubmit"
            android:layout_marginTop="@dimen/_20sdp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>