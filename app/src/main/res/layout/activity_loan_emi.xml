    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_blue_light">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Loan EMI"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18dp"/>








    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"

        android:padding="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_grey_border"
        android:layout_below="@id/toolbar"
        android:id="@+id/layoutLoanDetails"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:src="@drawable/ic_baseline_currency_rupee_24"
            app:tint="@color/blue"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/ivRupyee"
            android:layout_height="@dimen/_25sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/ivRupyee"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLoanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                style="@style/MediumTextView"
                android:fontFamily="@font/sora_bold"
                android:text="11,000"
                android:textColor="@color/black"
                 />
            <TextView
                android:id="@+id/tvLoanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"

                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                style="@style/SmallTextView"
                android:fontFamily="@font/sora_medium"
                android:text="Loan ID : "
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                style="@style/SmallTextView"
                android:fontFamily="@font/sora_medium"
                android:maxLength="15"
                android:text="Tenure"
                android:textColor="@color/grey_light"
                />
            <TextView
                android:id="@+id/tvTenure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                style="@style/SmallTextView"
                android:fontFamily="@font/sora_bold"
                android:maxLength="15"
                android:text="Due Date"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </RelativeLayout>



