<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UpiViewActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <WebView
                android:layout_width="match_parent"
                android:id="@+id/webViewPay"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:id="@+id/ivFakeUpi"
                android:textColor="@color/black"
                android:fontFamily="@font/sora_bold"
                android:text="TEST UPI-SDK"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_baseline_currency_rupee_24"
                android:background="@drawable/background_yellow_rounded"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>