<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F7F8"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="11dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/loanLayout"
            android:layout_height="match_parent"
            android:background="@drawable/background_blue_border"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLeadId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_bold"
                        android:text="Lead ID :"
                        android:textColor="@color/black"
                        style="@style/MediumTextView"/>

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Name"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>

                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Date of Birth :"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Gender :"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>
                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="State :"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>
                    <TextView
                        android:id="@+id/tvPincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="PINCODE :"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/ivForward"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"

                    android:fontFamily="@font/sora_medium"
                    android:text="PAID"
                    app:tint="@color/black"
                    android:src="@drawable/baseline_arrow_forward_24"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLeadStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:text="PENDING"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible"
                    app:cornerRadius="10dp" />


            </RelativeLayout>



        </LinearLayout>







    </androidx.cardview.widget.CardView>


</LinearLayout>