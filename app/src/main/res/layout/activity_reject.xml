<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.RejectActivity">


    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/ivClose"
        android:src="@drawable/ic_close"
        android:layout_height="@dimen/_25sdp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:id="@+id/animation_view"
                            app:lottie_rawRes="@raw/reject_animate"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>




    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Sorry! You're not eligible right now"
        android:textAllCaps="false"
        android:gravity="center"
        android:fontFamily="@font/sora_bold"
        style="@style/MediumTextView"

        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Unfortunately, we will not be able to process your application further as you did not statisfy all our eligibility criteria"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/sora_regular"
        style="@style/normalBodyTextView"

        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/linearLayout"
        android:background="@color/grey"
        android:layout_height="@dimen/_1sdp"/>


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Please share your feedback here and we will help you quickly."
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/sora_regular"
        style="@style/normalBodyTextView"

        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:numStars="5"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="Submit"
        android:id="@+id/btnOtpContinue"

        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_105sdp"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/_4sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_rounded_blue"
        android:layout_height="wrap_content"/>
</LinearLayout>