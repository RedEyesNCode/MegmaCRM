<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainDrawer"
    android:orientation="vertical"
    tools:context=".ui.activity.DashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_dashboard_bg"
        android:layout_height="wrap_content">



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_dashboard_bg"
        android:layout_height="wrap_content">



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/ivNavDrawer"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_menu_24"
                    app:tint="@color/white" />
                <TextView
                    style="@style/BigTextView"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/gilroy_extra_bold"
                    android:letterSpacing="0.25"
                    android:padding="@dimen/_5sdp"

                    android:text="@string/app_name"
                    android:textColor="@android:color/white" />
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/ivNotification"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_notifications_24"
                    app:tint="@color/white" />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>




        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_100sdp"
                android:layout_height="wrap_content"

                android:background="@drawable/background_white_top_rounded"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <include
                    android:id="@+id/layoutDashboardKyc"
                    layout="@layout/item_dashboard_status_banner"/>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sora_medium"
                    android:text=""
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:background="@color/yellow"
                    android:layout_height="@dimen/_3sdp"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="@dimen/_200sdp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:padding="10dp">


                    <com.denzcoskun.imageslider.ImageSlider
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:iss_period="1000"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_title_background="@drawable/gradient"
                        app:iss_corner_radius="10"
                        android:id="@+id/imageSlider"
                        />




                </androidx.cardview.widget.CardView>

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/grey_light"
                    app:dotsCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    app:dotsSize="16dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    app:selectedDotColor="@color/blue"
                    app:progressMode="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/sora_medium"
                    android:text="Banks working with us"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:background="@color/yellow"
                    android:layout_height="@dimen/_3sdp"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerBanks"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="@dimen/_90sdp" />
                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator_banks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/grey_light"
                    app:dotsCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:dotsSize="16dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    android:visibility="invisible"
                    app:selectedDotColor="@color/blue"
                    app:progressMode="true"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recvPackage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        tools:listitem="@layout/layout_list_package"
                        android:layout_marginEnd="2dp"

                        android:layout_marginBottom="2dp"
                        android:visibility="gone"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/sora_bold"
                        android:text="Credit Tracker"

                        android:layout_centerVertical="true"
                        style="@style/MediumTextView"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/grey"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sora_bold"
                        android:text="Updated on 26 Dec 2023"
                        android:layout_centerVertical="true"
                        style="@style/ShapeAppearance.Material3.LargeComponent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.vipulasri.ticketview.TicketView
                        android:id="@+id/ticketView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"

                        android:layout_marginBottom="@dimen/_5sdp"
                        app:ticketBackgroundColor="@color/white"
                        app:ticketDividerPadding="0dp"
                        app:ticketDividerType="dash"
                        app:ticketOrientation="horizontal"
                        app:ticketScallopPositionPercent="55"
                        app:ticketScallopRadius="@dimen/_10sdp"
                        app:ticketShowBorder="true"
                        app:ticketShowDivider="true">


                    </com.vipulasri.ticketview.TicketView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivCreditBaner"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:src="@drawable/ic_cibil_banner" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvCreditScore"
                        android:textColor="@color/black"
                        android:padding="@dimen/_5sdp"
                        android:layout_toEndOf="@id/ivCreditBaner"
                        android:fontFamily="@font/sora_regular"
                        android:text="Credit Score"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/MediumTextView"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/tvScore"
                        android:layout_toEndOf="@id/ivCreditBaner"
                        android:fontFamily="@font/sofia_sans_cond_extra_bold"
                        android:text="750/900"
                        android:layout_below="@id/tvCreditScore"
                        android:letterSpacing="0.2"
                        android:layout_marginTop="@dimen/_4sdp"
                        style="@style/MediumTextView"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvScoreInfo"
                        style="@style/MediumTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivCreditBaner"
                        android:layout_alignParentStart="true"

                        android:layout_marginStart="@dimen/_10sdp"

                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/sora_regular"
                        android:padding="@dimen/_5sdp"
                        android:text="Keep going! Your score's decent, but can be better"
                        android:textColor="@color/black" />
                </RelativeLayout>



            </LinearLayout>


        </ScrollView>



    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_loan_admin" />


</androidx.drawerlayout.widget.DrawerLayout>