<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ApproveActivity">
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/ivClose"
        android:src="@drawable/ic_close"
        android:layout_height="@dimen/_25sdp"/>


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/ivSuccess"
        android:layout_height="@dimen/_200sdp"/>


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Your Loan was Approved !"
        android:textAllCaps="false"
        android:id="@+id/tvApproveStatus"
        android:gravity="center"
        android:fontFamily="@font/sora_bold"
        style="@style/MediumTextView"

        android:layout_height="wrap_content"/>


    <View
        android:layout_width="match_parent"
        android:layout_below="@id/linearLayout"
        android:background="@color/grey"
        android:layout_height="@dimen/_1sdp"/>


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="Please share your feedback here and we will help you quickly."
        android:textAllCaps="false"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/sora_regular"
        style="@style/normalBodyTextView"

        android:layout_height="wrap_content"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:numStars="5"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="Check Loan Status"
        android:id="@+id/btnLoanStatus"

        android:textAllCaps="false"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/_4sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_rounded_blue"
        android:layout_height="wrap_content"/>
</LinearLayout>