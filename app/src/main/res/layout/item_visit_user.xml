<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F7F8"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="11dp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/loanLayout"
            android:layout_height="match_parent"
            android:background="@drawable/background_purple_border"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvVisitId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_bold"
                        android:text="Lead ID :"
                        android:textColor="@color/black"
                        style="@style/MediumTextView"/>

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Name"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Date of Birth :"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/sora_regular"
                        android:text="Location"
                        android:textColor="@color/black"
                        style="@style/SmallTextView"/>

                </LinearLayout>





                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewSelfie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"

                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_trans"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:text="View Selfie"
                    android:textSize="@dimen/_11ssp"
                    app:cornerRadius="10dp" />


            </RelativeLayout>



        </LinearLayout>







    </androidx.cardview.widget.CardView>


</LinearLayout>