<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyKycActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:rotation="180"
            android:id="@+id/ivBack"
            app:tint="@color/black"
            android:layout_height="@dimen/_25sdp"/>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Verify KYC"
                android:textAllCaps="false"
                android:fontFamily="@font/sora_bold"
                style="@style/bigHeadingTextView"

                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/grey_light"
                android:text="Choose a mode of verification"
                android:textAllCaps="false"
                android:fontFamily="@font/sora_bold"
                style="@style/normalBodyTextView"


                android:layout_height="wrap_content"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/kycCard"

                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_85sdp"
                            android:src="@drawable/ic_aadhar"
                            android:layout_alignParentStart="true"
                            android:layout_height="@dimen/_85sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            app:tint="@color/black"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_arrow_forward_24"
                            android:layout_height="@dimen/_25sdp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="Paperless (e-KYC)"
                        android:layout_margin="@dimen/_8sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sora_bold"
                        style="@style/MediumTextView"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_8sdp"

                        android:textColor="@color/grey_light"
                        android:text="Verify instantly by sharing your KYC Details through Aadhar website"

                        android:textAllCaps="false"
                        android:fontFamily="@font/sora_bold"
                        style="@style/normalBodyTextView"


                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_85sdp"
                            android:src="@drawable/ic_digi_locker"
                            android:layout_alignParentStart="true"
                            android:layout_height="@dimen/_85sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            app:tint="@color/black"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_arrow_forward_24"
                            android:layout_height="@dimen/_25sdp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="DigiLocker KYC"
                        android:layout_margin="@dimen/_8sdp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/sora_bold"
                        style="@style/MediumTextView"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_8sdp"

                        android:textColor="@color/grey_light"
                        android:text="Verify instantly by sharing your KYC Details through Aadhar website"

                        android:textAllCaps="false"
                        android:fontFamily="@font/sora_bold"
                        style="@style/normalBodyTextView"


                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>





        </LinearLayout>


    </ScrollView>

</LinearLayout>