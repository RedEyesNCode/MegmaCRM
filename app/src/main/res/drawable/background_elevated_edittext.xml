<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color -->
            <corners android:radius="@dimen/_5sdp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- Grey border -->
    <item android:bottom="2.5dp" android:right="2.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke
                android:width="1.5dp"
                android:color="#CCCCCC" /> <!-- Grey color -->
            <corners android:radius="@dimen/_4sdp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
</layer-list>

